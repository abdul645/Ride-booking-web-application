    <div class="complete-main-div">
        <div class="left-scroll-div">
            <h1>Choose a ride</h1>
            <div class="sourse-plus-dest">
                <span id="source"><%= pickup %></span>
                <i class='fas fa-arrow-right' style='font-size:15px'></i>
                <span id="destination"><%= dropoff %></span>
                <p>Leave Now</p>
            </div>
            <h2>Recommended</h2>
            <!-- <%# Show All data %> this is comment  -->
            <% data.forEach((item)=> { %>
                
            <div class="Recommended-share" id="<%= item.VehicleName %>" data-id="<%= item._id %>">
                <div class="bk">
                    <!-- <%= item.VehicleImage %>⬅️ it will fetch the name of image from mongodb -->
                     <!-- it will fetch ⬇️ the image from the uploads directory -->
                    <img src="/uploads/<%= item.VehicleImage %>" alt="img">
                </div>
                <div class="bk-content">
                    <span>
                        <p><%= item.VehicleName %></p>
                    </span>
                    <p>4 mins away</p>
                    <p>Affordable rides</p>
                </div>
                <div class="bk-price">

                    <% if (item.VehicleName == "Bike") { %>

                            <div class="bk-price">₹ <%= bikePrice %></div>
                    
                    <% } else if(item.VehicleName == "Car") { %>
                    
                            <div class="bk-price">₹ <%= miniPrice %></div>
                    
                    <% } else if(item.VehicleName == "GoSedan") { %>
                    
                            <div class="bk-price">₹ <%= sedanPrice %></div>
                    
                    <% } else if(item.VehicleName == "Auto") { %>
                
                            <div class="bk-price">₹ <%= topSedanPrice %></div>

                    <% } else if(item.VehicleName == "RideEaseXL") { %>
                
                            <div class="bk-price">₹ <%= xlPrice %></div>
                       
                    <% } else { %>
                    
                            <div class="bk-price">Price not available</div>
                    
                    <% } %>
                </div>
            </div>
            <% }) %>


